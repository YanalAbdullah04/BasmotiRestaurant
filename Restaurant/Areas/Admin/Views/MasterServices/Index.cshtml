@model IEnumerable<Restaurant.Models.MasterServices>


@{
    ViewData["Title"] = "Index";
    int counter = 0;
}
<link href="~/customstyle/indexstyle.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- jQuery first -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Then Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>






<div class="row mb-4 ml-0 mr-0">
    <div class="col-6 ">  <h1>   Services </h1></div>
    <div class="col-6 " style="text-align:right">

        <a asp-action="Create" class="btn btn-primary white-bg">
            <i class="bi bi-plus-lg"></i>
            Create new
        </a>
    </div>
    <nav class="">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active"><a >Services</a></li>
        </ol>
    </nav>


</div>

<table class="table datatable mt-5">
    <thead class="" style="    text-align: center !important;">
        <tr>
            <th scope="col">
                #
            </th scope="col">

            <th scope="col">
                @Html.DisplayNameFor(model => model.MasterServicesTitle)
            </th >
            <th>
                @Html.DisplayNameFor(model => model.MasterServicesDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MasterServicesImage)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
     counter++;
         
            <tr>
            
                <td>
                    @counter
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.MasterServicesTitle)
            </td>
   
            <td>
                @Html.DisplayFor(modelItem => item.MasterServicesDesc)
            </td>
   
            <td>                  <a href="/images/@item.MasterServicesImage" target="_blank" class="link-light">
                        <img src="~/images/@item.MasterServicesImage"
                             class=" w-50" />
                    </a>


            </td>
           
            <td>              
     <a asp-action="Active" asp-route-id="@item.MasterServicesId" class="text-decoration-none d-inline-flex align-items-center gap-1">
                      @{
                        if (item.IsActive)
                        {
                            <i class="bi bi-check-circle-fill " style="color:green ;font-size:25px"></i>
                        }
                        else
                        {
                            <i class="bi bi-x-circle-fill " style="color:red;font-size:25px"></i>
                        }
                        }
                        </a>
  </td>
          
           <td>
                    <button type="button" class="btn btn-success rounded-pill mb-1">
                      <a class="link-light" asp-action="Edit" asp-route-id="@item.MasterServicesId">Edit</a> 
                            <i class="bi bi-pencil-square "
                               style="color: white;" >  </i>
                            
                       

                    </button>
                
                   @*  <a asp-action="Delete" asp-route-deleteid="@item.MasterItemMenuId">Delete</a> *@
                           <button type="button"
                            class="btn btn-danger rounded-pill csDelete"
                            data-navigation="@Url.ActionLink("Delete", "MasterServices", new { id = item.MasterServicesId })"
                            data-toggle="modal" data-target="#target">
                        <i class="bi bi-trash-fill"></i>
                        Delete
                    </button>

            </td>
        </tr>
}
    </tbody>
</table>


<div class="modal fade" id="target" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                are you sure  you want to delete this row ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary remove-path-btn" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger confirm-delete-btn">Delete</button>

            </div>
        </div>
    </div>
</div>


    <script>
        var deletePath = "";

     $(document).ready(function () {
        $('.csDelete').click(function () {
            deletePath = $(this).data("navigation");
        });

        $('.btn-danger.confirm-delete-btn').click(function () {
            if (deletePath !== "") {
                window.location.href = deletePath;
            }
        });

        $('.btn-secondary.remove-path-btn').click(function () {
            deletePath = "";
        });
    });

</script>