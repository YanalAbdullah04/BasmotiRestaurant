@model IEnumerable<Restaurant.Models.TransactionContactUs>




@{
    ViewData["Title"] = "Index";
    int counter = 0;
}
<link href="~/customstyle/indexstyle.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- jQuery first -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<!-- Then Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>






<div class="row mb-4 ml-0 mr-0">
    <div class="col-6 ">  <h1>  ContactUs </h1></div>

    <nav class="">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active"><a >Contact Us</a></li>


        </ol>
    </nav>


</div>

<table class="table datatable mt-5">
    <thead class="" style="    text-align: center !important;">
        <tr>
            <th scope="col">
                #
            </th>

            <th scope="col" class="">
                @Html.DisplayNameFor(model => model.TransactionContactUsFullName)
            </th>

            <th scope="col" class="">
                @Html.DisplayNameFor(model => model.TransactionContactUsEmail)
            </th>
            <th scope="col" class="">
                @Html.DisplayNameFor(model => model.TransactionContactUsMessage)
            </th>
            <th scope="col" class="">
                @Html.DisplayNameFor(model => model.TransactionContactUsSubject)
            </th>
       



            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            counter++;



            <tr>
                <td class="align-content-center">
                    @counter
                </td>
                <td class="align-content-center">
                    @Html.DisplayFor(modelItem => item.TransactionContactUsFullName)
                </td>
                <td class="align-content-center">
                    @Html.DisplayFor(modelItem => item.TransactionContactUsEmail)
                </td>
                <td class="align-content-center">
                    @Html.DisplayFor(modelItem => item.TransactionContactUsMessage)
                </td>
                <td class="align-content-center">
                    @Html.DisplayFor(modelItem => item.TransactionContactUsSubject)
                </td>


            </tr>
        }
    </tbody>
</table>
