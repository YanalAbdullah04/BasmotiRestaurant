@model IEnumerable<Restaurant.Models.MasterOffer>



@{
    ViewData["Title"] = "Index";
    int counter = 0;
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<link href="~/customstyle/indexstyle.css" rel="stylesheet" />

<div class="row mb-4 ml-0 mr-0">
    <div class="col-6 ">  <h1>  Offer </h1></div>
    <div class="col-6 " style="text-align:right">

        <a asp-action="Create" class="btn btn-primary white-bg">
            <i class="bi bi-plus-lg"></i>
            Create new
        </a>
    </div>
    <nav class="">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active"><a>Offer</a></li>


        </ol>
    </nav>
</div>
    <table class="table datatable mt-5">
        <ead class="" style="    text-align: center !important;">
            <tr>
                <th scope="col">
                    #
                </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.MasterOfferTitle)
            </th>
                <th scope="col" class="">
                    @Html.DisplayNameFor(model => model.MasterOfferBreef)
                </th>
            <th scope="col">
                    @Html.DisplayNameFor(model => model.MasterOfferDesc)
                </th>
            <th scope="col">
                    @Html.DisplayNameFor(model => model.MasterOfferImageUrl)
                </th>
            
                <th scope="col">
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
 
                <th scope="col"></th>
            </tr>
        </ead>
        <tbody>
            @foreach (var item in Model)
            {
                counter++;
                
                
                <tr>
                <td class="align-content-center">
                    @counter
                </td>
                <td class="align-content-center">
                        @Html.DisplayFor(modelItem => item.MasterOfferTitle)
                    </td>
                <td class="align-content-center">
                        @Html.DisplayFor(modelItem => item.MasterOfferBreef)
                    </td>
                <td class="align-content-center">
                        @Html.DisplayFor(modelItem => item.MasterOfferDesc)
                    </td>
     
                    <td class="w-25 align-content-center">
                    <a href="/images/@item.MasterOfferImageUrl" target="_blank" class="link-light">
                        <img src="~/images/@item.MasterOfferImageUrl"
                        class=" w-50" />

                        </a>   
                    </td>

                <td class="align-content-center">

                    <a asp-action="Active" asp-route-id="@item.MasterOfferId" class="text-decoration-none d-inline-flex align-items-center gap-1">
                        @{
                            if (item.IsActive)
                            {
                                <i class="bi bi-check-circle-fill " style="color:green ;font-size:25px"></i>
                            }
                            else
                            {
                                <i class="bi bi-x-circle-fill " style="color:red;font-size:25px"></i>
                            }
                        }
                    </a>
                </td>
                <td class="align-content-center  operationsbuttons">
                    <button type="button" class="btn btn-success rounded-pill mb-1">
                        <a asp-action="Edit" asp-route-id="@item.MasterOfferId" class="link-light">
                            <i class="bi bi-pencil-square "
                               style="color: white;">  </i>
                            Edit
                        </a>
                    </button>
                    @*   
                        <a asp-action="Delete" asp-route-id="@item.MasterMenuId">Delete</a> *@

                    <button type="button"
                            class="btn btn-danger rounded-pill csDelete mb-1"
                            data-navigation="@Url.ActionLink("Delete", "MasterOffer", new { deleteid = item.MasterOfferId })"
                            data-toggle="modal" data-target="#target">
                        <i class="bi bi-trash-fill"></i>
                        Delete
                    </button>

                    </td>
                </tr>
            }
        </tbody>
    </table>  
    <div class="modal fade" id="target" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    are you sure  you want to delete this row ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary remove-path-btn" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger confirm-delete-btn">Delete</button>

                </div>
            </div>
        </div>
    </div>
    <script>
            var deletePath = "";

         $(document).ready(function () {
            $('.csDelete').click(function () {
                deletePath = $(this).data("navigation");
            });

            $('.btn-danger.confirm-delete-btn').click(function () {
                if (deletePath !== "") {
                    window.location.href = deletePath;
                }
            });

            $('.btn-secondary.remove-path-btn').click(function () {
                deletePath = "";
            });
        });
    </script>